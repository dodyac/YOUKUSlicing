<?xml version="1.0" encoding="utf-8"?>
<com.acxdev.commonFunction.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fade"
        android:rotation="180"
        android:translationZ="@dimen/x2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fade"
        android:translationZ="@dimen/x2dp" />

    <com.acxdev.shimmer.widget.ShimmerImage
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.acxdev.shimmer.widget.ShimmerText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/x16dp"
        android:layout_marginBottom="@dimen/x20dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:translationZ="@dimen/x2dp" />

    <ImageView
        android:layout_width="@dimen/x50dp"
        android:layout_height="@dimen/x50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/x20dp"
        android:layout_marginBottom="@dimen/x30dp"
        android:padding="@dimen/x16dp"
        android:background="@drawable/bg_circle_stroke"
        android:src="@drawable/icons8_play"
        android:translationZ="2dp"
        app:tint="@color/default_color" />
</com.acxdev.commonFunction.widget.SquareRelativeLayout>